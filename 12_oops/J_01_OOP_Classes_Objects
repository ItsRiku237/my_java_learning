//OBJECT ORIENTED PROGRAMMING SYSTEMS (OOPS)

//CLASS

import Bank.Bank;

class Student {
    String Name;
    int age;

    public void getInfo() {
        System.out.println("Student Name is " + this.Name);
        System.out.println("Student Age is " + this.age);
    }

    Student(String name, int age) {
        // Parameterized constructor
        this.Name = name;
        this.age = age;
    }
}

// CLASS
class Pen {
    String colour;
    String type;

    Pen() {// There is no reatun type in Constructor.
        System.out.println("Constructor called");
        // Non-Parameterized constructor
    }

    public void write() {
        System.out.println("Writing something");
    }

    public void penInfo() {
        System.out.println("Colour of Pen is " + this.colour);
        System.out.println("Type of Pen is " + this.type);
    }
}

class Bank {
    String Name;
    int Acc_No;

    Bank(Bank employe2) {
        // Copy Constructor
        this.Name = employe2.Name;
        this.Acc_No = employe2.Acc_No;
    }

    Bank() {
        // Blank Constructer made bcz of copy constructer .
    }

    public void info() {
        System.out.println("Name of the employee is " + this.Name);
        System.out.println("Account number of the employee is " + this.Acc_No);
    }
}

// OBJECT
public class J_01_OOP_Classes_Objects {
    public static void main(String[] args) {
        Student s1 = new Student("Riku", 19);
        // s1.Name = "Riku";
        // s1.age = 19;
        s1.getInfo();

        Student s2 = new Student("Raman", 20);
        // s2.Name = "Raman" ;
        // s2.age = 20 ;
        s2.getInfo();

        Pen p1 = new Pen();
        p1.colour = "Blue";
        p1.type = "gel";
        p1.write();
        p1.penInfo();

        Bank employe1 = new Bank();
        employe1.Name = "Aditya";
        employe1.Acc_No = 1234;

        Bank employe2 = new Bank(employe1);
        employe2.info();

    }

}
